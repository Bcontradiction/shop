<div class="aw-mod aw-topic-bar">
    <div class="clearfix">
         <span class="topic-tag">
             <a href="/?category=<%= shop.category %>" class="text"><%= shop.categoryName %></a>
         </span>
    </div>
</div>
<!--话题-->
<!--问题主体-->
<div class="aw-mod aw-question-detail">
    <div class="mod-head">
        <h1></h1>

        <div class="operate clearfix">
            <a href="javascript:void(0)" target="" ng-click="follow_article($event)" class="follow btn btn-normal btn-success pull-left ">
                <span>关注</span> <em>|</em> <b>0</b>
            </a>
        </div>

    </div>
    <div class="mod-body">
        <div class="content markitup-box"></div>
    </div>
    <div class="mod-footer">
        <div class="meta">
            <span class="text-color-999">10秒前</span>
            <span class="text-color-999">次浏览</span>

            <a href="/question//edit" class="aw-add-comment text-color-999">
                <i class="fa fa-edit"></i>&nbsp;编辑
            </a>
            <a href="javascript:void(0)" ng-click="delete($event)" target=""  class="aw-add-comment text-color-999">
                <i class="fa fa-remove"></i> 删除
            </a>

            <div class="pull-right more-operate">
                <a href="#" class="text-color-999">
                    <i class="fa fa-share-square-o"></i>&nbsp;分享
                </a>
            </div>
        </div>
    </div>
</div>
