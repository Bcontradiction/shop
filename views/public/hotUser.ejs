<div class="aw-mod aw-text-align-justify">
    <div class="mod-head">
        <a href="/users" class="pull-right">更多</a>
        <h3>热门用户</h3>
    </div>
    <div class="mod-body">
        <% users.forEach(function(users){%>
        <dl>
            <dt class="pull-left aw-border-radius-5">
                <a href="/user/<%= users.name %>"><img src="<%= users.avatar %>"></a>
            </dt>
            <dd class="pull-left">
                <a href="#" class="aw-user-name"><%= users.name %></a>
                <p class="signature"></p>
                <p>
                    <b><%= users.article_count%></b>个问题
                    <b><%= users.reply_count %></b>次回复
                </p>
            </dd>
        </dl>
        <%})%>
    </div>
</div>