            console.log(err)
        })
    })
    $('#lk_publish').click(function(event){
        $.ajax({
            type:'GET',
            url:`/index/lk_publish`
        }).then(data=>{
            console.log(data)
        }).catch(err=>{
            console.log(err)
        })
    })
    $('#lk_shoppingcart').click(function(event){
        $.ajax({
            type:'GET',
            url:`/index/lk_shoppingcart`
        }).then(data=>{
            console.log(data)
        }).catch(err=>{
            console.log(err)
        })
    })
    $('.aw-user-nav-dropdown,.dropdown-list').mouseover(function(event){
        $('.dropdown-list').removeClass('hide')
    }).mouseout(function(){
        $('.dropdown-list').addClass('hide')
    });

</script>
