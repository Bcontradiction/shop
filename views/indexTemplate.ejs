<body>
<div class="bg_all">
    <div class="aw-top-menu-wrap">
        <div class="container">
            <a href="/" class="logo_all clearfix">
                <img src="images/logo3.png" alt="">
            </a>
            <div class="ls-nav-left">
                <ul class="linkstart_nav">
                    <li class="click_linkstart_li" id="lk_indexes"><a href="/index">索引</a></li>
                    <%if(user){%>
                    <li class="click_linkstart_li" id="lk_publish"><a href="/shop/add">发布商品</a></li>
                    <li class="click_linkstart_li" id="lk_shoppingcart"><a href="/shoping-list/<%=user._id%>">我的购物车</a></li>
                    <%}%>
                </ul>
            </div>
            <div class="ls-nav-right">
                <% if(!user){%>
                <span>
                    <a class="login_o btn btn-normal btn-primary" href="/login" style="background: #FF9800;border:none">登录</a>
                    <a class="register_o btn btn-normal btn-success" href="/register" style="background: #f44336;border:none">注册</a>
                </span>
                <%}else{%>
                <a href="#" class="aw-user-nav-dropdown" style="height: 50px;padding-bottom: 50px">
                    <img src="<%= user.avatar%>">
                </a>
                <!--购物车-->
                <div class="clearfix" style="display: inline-block;float: right;margin-top: 8px;position: relative">
                    <a href="/shoping-list">
                        <i style="font-size: 36px;color: rgb(150,190,230)" class="fa fa-shopping-cart" aria-hidden="true"></i>
                    </a>
                    <a href="/my/messages">
                        <i class="fa fa-bell-o gray-weight" style="font-size: 28px" aria-hidden="true"></i>
                        <span class="nav-message" style="position: absolute;top: -15px;right: -5px;color: #d2322d;font-weight: bold;font-size: 15px"></span>
                    </a>

                </div>
                <div class="aw-dropdown dropdown-list pull-right hide box-shadow">
                    <ul class="aw-dropdown-list">
                        <li class="hidden-xs">
                            <a href="/user-list">
                                <i class="fa fa-cogs"></i>
                                信息及设置
                            </a>
                        </li>
                        <li>
                            <a href="/logout">
                                <i class="fa fa-sign-out"></i>
                                退出
                            </a>
                        </li>
                    </ul>
                </div>
                <%}%>
            </div>
        </div>
    </div>
    <%- body %>
    <footer class="footer" style="border:0">
        <div class="container" style="border:0">
        </div>
        <div class="footer-bottom" style="border:0">
            <ul class="list-inline text-center" style="border:0">
            </ul>
        </div>
    </footer>
</div>

</body>
</html>
